{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/command": ["libs/command/src"],
      "@app/command/*": ["libs/command/src/*"],
      "@app/common": ["libs/common/src"],
      "@app/common/*": ["libs/common/src/*"],
      "@app/module": ["libs/module/src"],
      "@app/module/*": ["libs/module/src/*"],
      "@financial": ["apps/services/financial/src"],
      "@financial/*": ["apps/services/financial/src/*"],
      "@special": ["apps/services/special/src"],
      "@special/*": ["apps/services/special/src/*"],
      "@logger": ["apps/workers/logger/src"],
      "@logger/*": ["apps/workers/logger/src/*"],
      "@dispatcher": ["apps/workers/dispatcher/src"],
      "@dispatcher/*": ["apps/workers/dispatcher/src/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/**", "dist", "**/dist/**", "docs", "**/docs/**"]
}
